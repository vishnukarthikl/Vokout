<% if @owner.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-danger">
        <%= pluralize(@owner.errors.count, "error") %> encounterd during sign-up, please rectify
        </div>
        <ul>
            <% @owner.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
