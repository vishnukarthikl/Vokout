<div class="container"><h1>Add Collaborator</h1>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
      <%= simple_form_for(@owner,url: create_collaborator_path) do |f| %>
          <%= render 'shared/error_messages' %>
          <%= f.input :name %><br>
          <%= f.input :email %><br>
          <%= f.submit 'Add', class: 'btn btn-success', id: 'signup-button' %>
          <hr />
          <p><%= link_to "Need Help?", contact_path %></p>
      <% end %>
    </div>
  </div>
</div>