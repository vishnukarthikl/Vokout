<%= form_for(@owner) do |f| %>
    <% if @owner.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@owner.errors.count, "error") %> encounterd during sign-up, please rectify</h2>

            <ul>
                <% @owner.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
    </div>
    <div class="field">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </div>

    <div class="field">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
        <%= f.submit "Sign Up" %>
    </div>
<% end %>
