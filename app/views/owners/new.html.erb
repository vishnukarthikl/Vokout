<h1>Sign up form</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(@owner) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.input :name %><br>
        <%= f.input :email %><br>
        <%= f.input :password %><br>
        <%= f.input :password_confirmation %><br>
        <%= f.submit 'Sign up', class: 'btn btn-primary' %>
        <p><%= link_to "Need Help?", help_path %></p>
    <% end %>
  </div>
</div>
