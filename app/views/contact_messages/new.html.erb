<div class="container"><h1>Contact us form</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for(@contact_message, url: :post_contact) do |f| %>
          <%= render 'shared/error_messages_contact' %>
          <%= f.input :name %><br>
          <%= f.input :phone %><br>
          <%= f.input :email %><br>
          <%= f.input :message %><br>

          <%= f.submit 'Send message', class: 'btn btn-success col-xs-4 col-xs-offset-1', id: 'signup-button' %>
          <a type="button" href="/" class="btn btn-default col-xs-4 col-xs-offset-2"> Home</a>
      <% end %>
    </div>
  </div>
</div>