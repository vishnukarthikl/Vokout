<h1>New Customer</h1>

<div class="col-md-6 col-md-offset-3">
  <%= simple_form_for(@customer) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name %><br>
        <%= f.input :email %><br>
        <%= f.input :phone_number %><br>
        <%= f.input :is_male, collection: [:male, :female], label: 'Sex' %> <br>
        <%= f.input :date_of_birth, as: :date, html5: true, label: 'Date of Birth' %>
        <%= f.input :occupation %><br>
        <%= f.input :address %><br>
        <%= f.input :pincode %><br>
        <%= hidden_field_tag 'facility_id', @facility.id %>
      </div>

      <div class="form-actions">
        <%= f.submit 'Add', class: 'btn btn-primary' %>
      </div>
  <% end %>
  <br>
  <%= link_to 'Back', customers_path %>


</div>