<h1>Password Reset</h1>
<div class="container">
  <div class="row">
    <div class="alert alert-info col-md-6 col-md-offset-3">
      Reset instructions will be sent to the email
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3"><%= bootstrap_form_tag url: password_resets_path, :method => :post do |f| %>
          <%= f.email_field :email %>
          <%= f.submit "Reset", class: "col-md-4 col-md-offset-4 btn btn-primary" %>
      <% end %>
    </div>
  </div>

</div>
