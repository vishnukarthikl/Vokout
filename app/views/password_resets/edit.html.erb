<h1>Password Reset</h1>
<div class="container">
  <div class="col-md-6 col-md-offset-3"><%= bootstrap_form_for @owner, url: password_reset_path(params[:id]) do |f| %>

        <% if @owner.errors.any? %>
            <div class="alert alert-danger">
              <div class="error_messages">
                <ul>
                  <% for message in @owner.errors.full_messages %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
        <% end %>
        <%= f.password_field :password %>
        <%= f.password_field :password_confirmation %>
        <%= f.submit "Update Password", class: "col-md-4 col-md-offset-4 btn btn-primary" %>
    <% end %></div>
</div>