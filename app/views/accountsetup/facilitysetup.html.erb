<h1>Initial Setup</h1>
<%= simple_form_for([@owner, @owner.build_facility], html: {class: 'form-horizontal'}) do |f| %>
    <div>
      <h3>Facility Details</h3>
      <%= f.input :name %>
      <%= f.input :address %><br/>
      <%= f.input :phone %><br/>
    </div>

    <div>
      <%= f.button :submit %>
    </div>
<% end %>