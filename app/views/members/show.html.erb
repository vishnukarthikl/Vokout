<div ng-controller="MemberCtrl">
  <div id="data" data-member-id="<%= @member.id %>" data-facility-id="<%= @member.facility.id %>"></div>
  <div class="container">
    <div class="row">
      <a href="/dashboard-members" class="btn btn-default btn-primary">
        <span class="glyphicon glyphicon-chevron-left"> Back</span></a>
    </div>
    <div class="row">
      <h3>
        <span ng-show="!member.inactive" class="btn-success member-status" alt="active"></span>
        <span ng-show="member.inactive" class="btn-danger member-status"></span>
        <span>{{member.name}}</span></h3>

    </div>
    <div class="row">
      <div class="col-md-6"><h4>Subscription Details</h4>
        <table class="table">
          <tr>
            <td>Current Subscription</td>
            <td>{{member.latest_subscription.membership.name}}</td>
          </tr>
          <tr>
            <td>Status</td>
            <td ng-show="!member.latest_subscription.expired">{{member.latest_subscription.days_left_words}} left for
              renewal
            </td>
            <td class="btn-danger" ng-show="member.latest_subscription.expired">expired
              {{member.latest_subscription.days_left_words}} ago
            </td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6"><h4>Contact Details</h4>
        <table class="table">
          <tr>
            <td>Phone</td>
            <td>{{member.phone_number}}</td>
          </tr>
          <tr ng-show="member.email">
            <td>Email</td>
            <td>{{member.email}}</td>

          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
