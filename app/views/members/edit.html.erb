<div ng-controller="EditMemberCtrl">
  <div id="data" data-member-id="<%= @member.id %>" data-facility-id="<%= @member.facility.id %>"></div>
  <div class="container">
    <form class="row form-horizontal" name="memberForm" novalidate>
      <fieldset>
        <!-- Form Name -->
        <legend>Edit Member</legend>

        <!-- Text input-->
        <div forminput>
          <label for="memberName">Name</label>

          <div class="col-md-4">
            <input id="memberName" ng-model="member.name" name="memberName" type="text" placeholder="" required>

          </div>
        </div>

        <!-- Select Basic -->
        <div forminput>
          <label for="memberSex">Sex</label>

          <div class="col-md-4">
            <select id="memberSex" ng-model="member.is_male" name="memberSex" class="form-control" required>
              <option value="true">Male</option>
              <option value="false">Female</option>
            </select>
          </div>
        </div>

        <!-- Prepended text-->
        <div forminput>
          <label for="memberPhone">Phone</label>

          <div class="col-md-4">
            <div class="input-group">
              <span class="input-group-addon">+91</span>
              <input id="memberPhone" type="text" ng-model="member.phone_number" name="memberPhone" class="form-control" placeholder="" required minlength="10" maxlength="10">
            </div>

          </div>
        </div>

        <!-- Text input-->
        <div forminput>
          <label for="memberEmail">E mail</label>

          <div class="col-md-4">
            <input id="memberEmail" ng-model="member.email" name="memberEmail" placeholder="" type="email">

          </div>
        </div>

        <!-- Text input-->
        <div forminput>
          <label for="memberDob">Date of Birth</label>

          <div class="col-md-4">
            <p class="input-group">
              <input id="memberDob" name="memberDob" type="text" class="form-control"
                     datepicker-popup="dd/MM/yyyy" ng-model="member.date_of_birth" is-open="dob_opened" close-text="Close"/>
              <span class="input-group-btn">
                <button type="button" class="btn btn-default" ng-click="open($event,'dob_opened')">
                  <i class="glyphicon glyphicon-calendar"></i></button>
              </span>
            </p>

          </div>
        </div>

        <!-- Text input-->
        <div forminput>
          <label for="memberOccupation">Occupation</label>

          <div class="col-md-4">
            <select name="memberOccupation" id="memberOccupation" class="form-control" ng-model="member.occupation">
              <option value="student">Student</option>
              <option value="working">Working</option>
              <option value="housewife">Housewife</option>
              <option value="business">Business</option>
              <option value="other">Other</option>
            </select>
          </div>
        </div>

        <!-- Textarea -->
        <div forminput>
          <label for="memberAddress">Address</label>

          <div class="col-md-4">
            <textarea class="form-control" id="memberAddress" ng-model="member.address" name="memberAddress"></textarea>
          </div>
        </div>

        <br/>
        <!-- Button (Double) -->
        <div class="form-group">

          <div class="col-md-7 col-md-offset-3">
            <a href="/members/{{member.id}}" class="btn btn-default col-md-2 col-md-offset-1">
              <span class="glyphicon glyphicon-chevron-left"> Cancel</span></a>
            <button id="editMemberButton" ng-disabled="memberForm.$invalid" ng-click="updateMember()" name="saveMemberButton" class="btn btn-success col-md-2 col-md-offset-1">Update</button>
          </div>
        </div>

      </fieldset>
      <alert ng-show="memberStatus" type="{{memberStatus.style}}" class="center">{{memberStatus.text}}</alert>
    </form>
  </div>
</div>